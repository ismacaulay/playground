<project>

    <target name='clean'>
        <delete dir='build'/>
    </target>

    <target name='build'>
        <mkdir dir='build/classes'/>
        <javac includeantruntime='false' srcdir='src' destdir='build/classes'/>
    </target>

    <target name='jar'>
        <mkdir dir='build/jar'/>
        <jar destfile='build/jar/Observer.jar' basedir='build/classes'>
            <manifest>
                <attribute name='Main-Class' value='com.ismacaulay.Observer'/>
            </manifest>
        </jar>
    </target>

    <target name='run'>
        <java jar='build/jar/Observer.jar' fork='true'/>
    </target>

</project>


